{
  "$schema": "https://railway.app/railway.schema.json",
  "builds": [
    {
      "name": "client",
      "builder": "DOCKERFILE",
      "dockerfilePath": "client/Dockerfile.railway",
      "context": "client"
    },
    {
      "name": "server",
      "builder": "DOCKERFILE",
      "dockerfilePath": "server/Dockerfile.railway",
      "context": "server"
    }
  ],
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
